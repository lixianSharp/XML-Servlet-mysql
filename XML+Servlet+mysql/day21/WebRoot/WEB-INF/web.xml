<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- 参数编码过滤器 -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>gz.itcast.d_cases.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<!-- 要过滤的路径，过滤所有路径 -->
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- 网页内容压缩过滤器 -->
	<filter>
		<filter-name>GZIPFilter</filter-name>
		<filter-class>gz.itcast.d_cases.GZIPFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>GZIPFilter</filter-name>
		<url-pattern>/content</url-pattern>		
	</filter-mapping>
	
	
	<!-- 配置一个过滤器 -->
	<!-- 过滤器配置 -->
	<filter>
		<!-- 内部名称 -->
		<filter-name>FirstFilter</filter-name>
		<filter-class>gz.itcast.a_filter.FirstFilter</filter-class>
		<!-- 初始化参数 -->
		<init-param>
			<param-name>AAA</param-name>
			<param-value>AAA' value</param-value>
		</init-param>
		<init-param>
			<param-name>BBB</param-name>
			<param-value>BBB' value</param-value>
		</init-param>
	</filter>
	<!-- 过滤器映射配置 -->
	<filter-mapping>
		<!-- 也是内部名称，但是和上面的名称保持一致！！！ -->
		<filter-name>FirstFilter</filter-name>
		<!--过滤器的url-pattern代表的是过滤的路径,而不是访问过滤器的路径  -->
		<url-pattern>/target</url-pattern>
	</filter-mapping>
	
	<!-- 第一个过滤器的配置 -->
	<filter>
		<!-- 内部名称 -->
		<filter-name>First</filter-name>
		<!-- 过滤器的全局路径 -->
		<filter-class>gz.itcast.b_chain.FirstFilter</filter-class>
	</filter>
	<!-- 过滤器映射配置 -->
	<filter-mapping>
		<!-- 内部名称 -->
		<filter-name>First</filter-name>
		<!--要过滤的路径  -->
		<url-pattern>/first</url-pattern>
	</filter-mapping>
	<!-- 第二个映射器的配置 -->
	<filter>
		<!-- 内部名称 -->
		<filter-name>Second</filter-name>
		<!-- 过滤器的全局路径名称 -->
		<filter-class>gz.itcast.b_chain.SecondFilter</filter-class>
	</filter>
	<filter-mapping>
		<!-- 内部名称 -->
		<filter-name>Second</filter-name>
		<!-- 要过滤的路径，而不是访问过滤器的路径 -->
		<url-pattern>/first</url-pattern>
	</filter-mapping>
	
	
	
	
	
	<!-- 以上是过滤器Filter -->
	
	<!-- 以下是Servlet -->
	
	
	
	
	
	
  <servlet>
    <servlet-name>TargetServlet</servlet-name>
    <servlet-class>gz.itcast.a_filter.TargetServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FirstServlet</servlet-name>
    <servlet-class>gz.itcast.b_chain.FirstServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetParamServlet</servlet-name>
    <servlet-class>gz.itcast.d_cases.GetParamServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ContentServlet</servlet-name>
    <servlet-class>gz.itcast.d_cases.ContentServlet</servlet-class>
  </servlet>



  
  
  
  
  

  <servlet-mapping>
    <servlet-name>TargetServlet</servlet-name>
    <!-- servlet的url-pattern代表访问这个servlet的路径 -->
    <url-pattern>/target</url-pattern>
  </servlet-mapping>
  
  
  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/first</url-pattern>
  </servlet-mapping>
  
  
  <servlet-mapping>
    <servlet-name>GetParamServlet</servlet-name>
    <url-pattern>/GetParamServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContentServlet</servlet-name>
    <url-pattern>/content</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
